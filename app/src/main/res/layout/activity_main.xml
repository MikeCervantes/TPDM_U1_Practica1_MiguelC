<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Etiqueta"
        android:background="#CFFFFF"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/etiqueta"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Escriba el texto a poner en la etiqueta"
        android:background="#FFFFFF"
        android:id="@+id/txt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar Etiqueta"
        android:textSize="20dp"
        android:onClick="cambiarTxt"
        android:id="@+id/btn"/>

    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOff="Oscuro"
        android:textOn="Claro"
        android:textSize="20dp"
        android:id="@+id/tggl"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/colores"
            android:padding="10dp"
            android:id="@+id/spn"></Spinner>
    </LinearLayout>

</LinearLayout>